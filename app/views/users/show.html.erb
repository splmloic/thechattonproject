<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card-body text-center"> 
        <h1 class="card-title">Profil de <%= @user.email %></h1>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <p>Email: <%= @user.email %></p>
              <p>Utilisateur: <%= @user.id %></p>
            </div>
            <%=  image_tag "iconeuser.png", alt: "Description de l'image", class: "ml-3" %>
          </div>
          
          <% if current_user == @user %>
          <div class="d-flex justify-content-between">
            <%= link_to "Modifier le profil", edit_user_registration_path, class: "btn btn-primary" %>
            <form class="button_to" method="post" action="/users">
              <input type="hidden" name="_method" value="delete" autocomplete="off">
              <button data-confirm="Etes-vous sur ?" data-turbo-confirm="Are you sure?" type="submit" class="btn btn-danger">Supprimer mon compte</button>
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" autocomplete="off">
            </form>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

